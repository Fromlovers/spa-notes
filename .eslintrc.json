{
    "root": true,
    "env": {
        "node": true
    },
    "extends": ["plugin:vue/essential", "eslint:recommended"],
    "parserOptions": {
        "parser": "babel-eslint"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "vue/attributes-order": [
            "error",
            {
                "order": [
                    "DEFINITION",
                    "LIST_RENDERING",
                    "CONDITIONALS",
                    "RENDER_MODIFIERS",
                    "GLOBAL",
                    "UNIQUE",
                    "TWO_WAY_BINDING",
                    "OTHER_DIRECTIVES",
                    "OTHER_ATTR",
                    "EVENTS",
                    "CONTENT"
                ]
            }
        ]
    }
}
